extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
block style
  style.
    .product-item a {
      color: green;
    }

block main 
    .container.my-3 
        .row 
            .col-12
              +box-head("Danh sách sản phẩm") 

        .row 
            each item in products 
                .col-4.mb-3
                    .product-item
                        .item-image 
                            img.image-product( src=item.thumbnail
                            , alt=item.title)
                        .inner-content 
                            h3.inner-title
                             a(href=`/products/${item.slug}`) #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount  #{item.discountPercentage}%
                            
